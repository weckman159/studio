rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getUserRole() {
      // Use exists() to prevent errors on non-existent documents
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isModOrAdmin() {
      let role = getUserRole();
      return isSignedIn() && (role == 'admin' || role == 'moderator');
    }

    // --- Collections ---

    // Users: Readable by anyone, but only owners can update their own non-critical data.
    match /users/{userId} {
      allow read: if true;
      allow create: if isOwner(userId);
      // Prevent self-promotion, role/status changes by non-admins
      allow update: if isOwner(userId) && !request.resource.data.keys().hasAny(['role', 'status', 'createdAt']);
      allow delete: if isModOrAdmin(); // Only mods/admins can delete users
    }
    
    // User Settings: Strictly private.
    match /userSettings/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Posts & Comments: Readable by all, creatable by signed-in users, editable only by owner.
    match /posts/{postId} {
      allow read: if true;
      allow create: if isSignedIn() 
                    && request.resource.data.authorId == request.auth.uid
                    && request.resource.data.content.size() < 10000;
      allow update: if isSignedIn() && resource.data.authorId == request.auth.uid 
                    && !request.resource.data.keys().hasAny(['authorId', 'createdAt', 'likesCount', 'commentsCount']); // Prevent changing ownership or stats
      allow delete: if isSignedIn() && (resource.data.authorId == request.auth.uid || isModOrAdmin());

      // Subcollections
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
        allow update: if isSignedIn() && resource.data.authorId == request.auth.uid
                      && !request.resource.data.keys().hasAny(['authorId', 'createdAt', 'postId']);
        allow delete: if isSignedIn() && (resource.data.authorId == request.auth.uid || isModOrAdmin());
      }
      match /likes/{likeId} {
        allow read: if true;
        allow create, delete: if isOwner(likeId);
      }
    }

    // Garage: Readable by all, writable only by owner.
    match /cars/{carId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && (resource.data.userId == request.auth.uid || isModOrAdmin());

      match /expenses/{expenseId} { allow read, list, write: if isSignedIn() && get(/databases/$(database)/documents/cars/$(carId)).data.userId == request.auth.uid; }
      match /timeline/{entryId} { allow read, list, write: if isSignedIn() && get(/databases/$(database)/documents/cars/$(carId)).data.userId == request.auth.uid; }
    }

    // Marketplace: Readable by all, writable by owner.
    match /marketplace/{itemId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.sellerId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.sellerId == request.auth.uid;
      allow delete: if isSignedIn() && (resource.data.sellerId == request.auth.uid || isModOrAdmin());
    }
    
    // Events, Votings, Communities
    match /events/{eventId} { allow read: if true; allow create: if isSignedIn(); allow update, delete: if isSignedIn() && (resource.data.organizerId == request.auth.uid || isModOrAdmin()); }
    match /communities/{commId} { allow read: if true; allow create: if isSignedIn(); allow update, delete: if isSignedIn() && (resource.data.adminId == request.auth.uid || isModOrAdmin()); }
    match /votings/{voteId} { 
      allow read: if true; 
      allow create: if isSignedIn();
      allow update: if isSignedIn() && !(request.auth.uid in resource.data.votedUserIds);
      allow delete: if isSignedIn() && (resource.data.authorId == request.auth.uid || isModOrAdmin());
    }

    // Notifications: Readable only by the recipient.
    match /notifications/{notificationId} {
      allow get, update: if isSignedIn() && resource.data.recipientId == request.auth.uid;
      allow list: if isSignedIn() && request.query.get("where")[0][2] == request.auth.uid; // Ensure querying only for self
      allow create, delete: if false; // Managed by Cloud Functions
    }

    // Admin-only collections
    match /moderationActions/{actionId} { allow read, write: if isModOrAdmin(); }
    match /feedback/{fbId} { allow create: if true; allow read, write: if isModOrAdmin(); }
    
    // Read-only collections
    match /featuredCars/{date} { allow read: if true; allow write: if false; }
    match /autoNews/{newsId} { allow read: if true; allow write: if false; }
    match /workshops/{wsId} { allow read: if true; allow create: if isSignedIn(); allow update, delete: if isModOrAdmin(); }
    match /workshopReviews/{reviewId} { allow read: if true; allow create: if isSignedIn(); allow update, delete: if isSignedIn() && (resource.data.userId == request.auth.uid || isModOrAdmin()); }

    // Chat
    match /dialogs/{dialogId} { allow read, write: if isSignedIn() && request.auth.uid in resource.data.participantIds; }
    match /messages/{messageId} { 
      allow read, create: if isSignedIn() && get(/databases/$(database)/documents/dialogs/$(request.resource.data.dialogId)).data.participantIds.hasAny([request.auth.uid]); 
      allow update, delete: if false; 
    }
  }
}
