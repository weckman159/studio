
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function requestingUserIs(role) {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return isSignedIn() && userDoc.data.role == role;
    }

    // --- User Profile & Settings ---
    match /users/{userId} {
      allow read: if true;
      allow create: if isOwner(userId);
      // Пользователь может обновлять свой профиль, админ может обновлять любой профиль
      allow update: if isOwner(userId) || requestingUserIs('admin');
      // Только админ может удалять
      allow delete: if requestingUserIs('admin');
    }
    
    match /userSettings/{userId} {
        allow read, write: if isOwner(userId);
    }
    
    // --- Admin Collections ---
    match /moderationActions/{actionId} {
      allow read: if requestingUserIs('admin');
      allow create: if requestingUserIs('admin');
      allow update, delete: if false; // Audit log is immutable
    }

    // --- Content (Posts, Comments, Likes) ---
    match /posts/{postId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update(diff): if isOwner(resource.data.authorId) && diff.affectedKeys().hasOnly(['title', 'content', 'category', 'imageUrl']);
      allow delete: if isOwner(resource.data.authorId) || requestingUserIs('admin') || requestingUserIs('moderator');

      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update: if isOwner(resource.data.authorId);
        allow delete: if isOwner(resource.data.authorId) || requestingUserIs('admin') || requestingUserIs('moderator');
      }
      match /likes/{likeId} {
        allow read: if true;
        allow create, delete: if isOwner(likeId);
      }
    }

    // --- Garage ---
    match /cars/{carId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId) || requestingUserIs('admin');

       match /expenses/{expenseId} {
        allow read, list, write: if isOwner(get(/databases/$(database)/documents/cars/$(carId)).data.userId);
      }
       match /timeline/{entryId} {
        allow read, list, write: if isOwner(get(/databases/$(database)/documents/cars/$(carId)).data.userId);
      }
    }

    // --- Marketplace ---
    match /marketplace/{itemId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isOwner(resource.data.sellerId);
      allow delete: if isOwner(resource.data.sellerId) || requestingUserIs('admin');
    }

    // --- Other Collections ---
    match /featuredCars/{date} { allow read: if true; allow write: if false; }
    match /votings/{voteId} { 
      allow read: if true; 
      allow update: if isSignedIn() && !(request.auth.uid in resource.data.votedUserIds);
      allow create: if isSignedIn(); 
      allow delete: if isOwner(resource.data.authorId) || requestingUserIs('admin');
    }
    match /workshops/{wsId} { allow read: if true; allow create: if isSignedIn(); allow update, delete: if requestingUserIs('admin'); }
    match /workshopReviews/{reviewId} { allow read: if true; allow create: if isSignedIn(); allow update, delete: if isOwner(resource.data.userId) || requestingUserIs('admin'); }
    match /dialogs/{dialogId} { allow read, write: if isSignedIn() && request.auth.uid in resource.data.participantIds; }
    match /messages/{messageId} { allow read, create: if isSignedIn() && get(/databases/$(database)/documents/dialogs/$(request.resource.data.dialogId)).data.participantIds.hasAny([request.auth.uid]); allow update, delete: if false; }
    match /feedback/{fbId} { allow create: if true; allow read, write, delete: if false; }
    match /autoNews/{newsId} { allow read: if true; allow write: if false; }
    match /communities/{commId} { allow read: if true; allow create: if isSignedIn(); allow update, delete: if isOwner(resource.data.adminId) || requestingUserIs('admin'); }
    match /events/{eventId} { allow read: if true; allow create: if isSignedIn(); allow update, delete: if isOwner(resource.data.organizerId) || requestingUserIs('admin'); }
     match /notifications/{notificationId} {
      allow get: if isSignedIn() && resource.data.recipientId == request.auth.uid;
      allow list: if isSignedIn() && request.query.where[0][0] == 'recipientId' && request.query.where[0][2] == request.auth.uid;
      allow update: if isSignedIn() && resource.data.recipientId == request.auth.uid && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']);
      allow create, delete: if false;
    }
  }
}
