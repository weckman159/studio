
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }

    // Разрешаем клиенту писать уведомления (например, при лайке)
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.recipientId == request.auth.uid;
      allow create: if isAuthenticated(); 
      allow update: if isAuthenticated() && resource.data.recipientId == request.auth.uid;
    }

    // Разрешаем клиенту создавать "Авто дня", если его еще нет
    match /featuredCars/{dateId} {
      allow read: if true;
      allow create: if isAuthenticated(); 
    }
    
    // Разрешаем обновлять счетчики в постах
    match /posts/{postId} {
      allow read: if true;
      allow create: if isAuthenticated();
      // Разрешаем обновление (счетчиков) любому авторизованному
      // В продакшене лучше использовать Cloud Functions, но для бесплатного тарифа это компромисс
      allow update: if isAuthenticated(); 
      allow delete: if isAuthenticated() && resource.data.authorId == request.auth.uid;

      match /likes/{userId} {
        allow read: if true;
        allow write: if isAuthenticated() && request.auth.uid == userId;
      }
    }

    // Остальные правила (упрощенно, для MVP)
    // В проде нужно детализировать каждое
    match /cars/{carId} {
      allow read, write: if isAuthenticated();
    }
    match /comments/{commentId} {
        allow read, write: if isAuthenticated();
    }
    match /users/{userId} {
      allow read: if true;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    match /communities/{communityId} {
       allow read, write: if isAuthenticated();
    }
     match /events/{eventId} {
       allow read, write: if isAuthenticated();
    }
     match /marketplace/{itemId} {
       allow read, write: if isAuthenticated();
    }
    match /votings/{votingId} {
        allow read, write: if isAuthenticated();
    }
     match /workshops/{workshopId} {
        allow read, write: if isAuthenticated();
    }
    match /workshopReviews/{reviewId} {
        allow read, write: if isAuthenticated();
    }
  }
}
